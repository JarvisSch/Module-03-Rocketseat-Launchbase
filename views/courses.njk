    <section class="cards">
        {% for item in items %}
            <div class="card" id="/{{item.id}}">
                <div class="{{item.course}}">
                        <span>{{item.idn}}</span>
                        <div>
                            <img src="{{item.img}}" alt="Imagem de {{item.title}}">
                        </div>
                        <p>
                            {{item.title}}
                        </p>
                        <div class="card-info">
                            <h1>{{item.duration}}</p>
                            <h2>{{item.price}}</h1>
                        </div>
                </div>
            </div>
        {% endfor %}    
       
    </section>
    
